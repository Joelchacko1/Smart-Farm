# Smart Farm Database Environment Variables
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_TYPE=sqlite
DATABASE_URL=sqlite:///smart_farm.db

# PostgreSQL Configuration (if using PostgreSQL)
POSTGRES_URL=postgresql://username:password@localhost:5432/smart_farm
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password
POSTGRES_DB=smart_farm
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# MySQL Configuration (if using MySQL)
MYSQL_URL=mysql+pymysql://username:password@localhost:3306/smart_farm
MYSQL_USER=your_username
MYSQL_PASSWORD=your_password
MYSQL_DB=smart_farm
MYSQL_HOST=localhost
MYSQL_PORT=3306

# SQLite Configuration (if using SQLite)
SQLITE_URL=sqlite:///smart_farm.db
SQLITE_PATH=./database/smart_farm.db

# Application Settings
DEBUG=True
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_VERSION=v1

# Security Settings
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Weather API (for weather data)
WEATHER_API_KEY=your-weather-api-key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# IoT Device Configuration
IOT_BROKER_HOST=localhost
IOT_BROKER_PORT=1883
IOT_BROKER_USERNAME=your-mqtt-username
IOT_BROKER_PASSWORD=your-mqtt-password

# File Storage
UPLOAD_FOLDER=./uploads
MAX_FILE_SIZE=10485760  # 10MB

# Logging
LOG_FILE=./logs/smart_farm.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5
